{
    "name": "iota_client",
    "version": "0.0.2",
    "keywords": "crypto, iota, client",
    "description": "IOTA C client library",
    "repository": {
        "type": "git",
        "url": "https://github.com/oopsmonk/iota.c.git",
        "branch": "pio_esp32"
    },
    "authors": {
        "name": "Sam Chen",
        "email": "sam.chen@iota.org",
        "maintainer": true
    },
    "frameworks": "*",
    "platforms": "espressif32",
    "build":{
        "srcFilter":[
            "+<cclient/service.c>",
            "+<cclient/api/core/*.c>",
            "+<cclient/api/extended/*.c>",
            "+<cclient/http/*.c>",
            "+<cclient/request/*.c>",
            "+<cclient/response/*.c>",
            "+<cclient/serialization/json/*.c>"
        ]
    },
    "dependencies": [
        {
            "name": "iota_common",
            "version": "https://github.com/oopsmonk/iota_common.git#pio_lib"
        }
    ]
}
